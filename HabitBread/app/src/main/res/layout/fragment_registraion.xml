<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_registration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageView_close"
        app:layout_constraintTop_toTopOf="@+id/textView_registration"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_close"/>

    <TextView
        android:id="@+id/textView_registration"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="습관 생성"
        android:textSize="30sp"
        android:textColor="#000000"/>

    <ImageView
        android:id="@+id/imageView_done"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/textView_registration"
        android:layout_marginEnd="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_done"/>

    <TextView
        android:id="@+id/textView_title"
        app:layout_constraintStart_toEndOf="@+id/imageView_close"
        app:layout_constraintTop_toBottomOf="@+id/textView_registration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="제목"
        android:textSize="30sp"
        android:textColor="#000000"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        app:layout_constraintTop_toBottomOf="@+id/textView_title"
        app:layout_constraintStart_toEndOf="@+id/imageView_close"
        app:layout_constraintEnd_toStartOf="@+id/imageView_done"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:boxBackgroundColor="#ffffff"
        app:counterEnabled="true"
        app:counterMaxLength="10">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText_title"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="25sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textView_category"
        app:layout_constraintStart_toStartOf="@+id/textView_title"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="카테고리"
        android:textSize="30sp"
        android:textColor="#000000"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textView_category"
            app:layout_constraintStart_toStartOf="@id/textView_title"
            app:layout_constraintEnd_toStartOf="@+id/imageView_done">
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroup_category"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:chipSpacingHorizontal="12dp"
                app:chipSpacingVertical="4dp"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_health"
                    style="@style/CategoryChipTheme"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:checkable="true"
                    android:text="건강"
                    android:textAlignment="center"
                    android:textAppearance="@style/CategoryChipTextTheme"
                    app:chipCornerRadius="15dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_study"
                    style="@style/CategoryChipTheme"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:background="@color/selector_chip"
                    android:checkable="true"
                    android:text="공부"
                    android:textAlignment="center"
                    android:textAppearance="@style/CategoryChipTextTheme"
                    app:chipCornerRadius="15dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_exercise"
                    style="@style/CategoryChipTheme"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:background="@color/selector_chip"
                    android:checkable="true"
                    android:text="운동"
                    android:textAlignment="center"
                    android:textAppearance="@style/CategoryChipTextTheme"
                    app:chipCornerRadius="15dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_daily"
                    style="@style/CategoryChipTheme"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:background="@color/selector_chip"
                    android:checkable="true"
                    android:text="일상"
                    android:textAlignment="center"
                    android:textAppearance="@style/CategoryChipTextTheme"
                    app:chipCornerRadius="15dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_hobby"
                    style="@style/CategoryChipTheme"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:background="@color/selector_chip"
                    android:checkable="true"
                    android:text="취미"
                    android:textAlignment="center"
                    android:textAppearance="@style/CategoryChipTextTheme"
                    app:chipCornerRadius="15dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_etc"
                    style="@style/CategoryChipTheme"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:background="@color/selector_chip"
                    android:checkable="true"
                    android:text="기타"
                    android:textAlignment="center"
                    android:textAppearance="@style/CategoryChipTextTheme"
                    app:chipCornerRadius="15dp" />
            </com.google.android.material.chip.ChipGroup>

        </androidx.constraintlayout.widget.ConstraintLayout>



