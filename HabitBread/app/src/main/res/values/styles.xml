<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#553615</item>
        <item name="colorPrimaryDark">#FF553615</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Habit List theme -->
    <style name="HabitListTheme" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <!-- Customize your theme here. -->
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <!-- Habit List theme -->
    <style name="bottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <!-- Customize your theme here. -->
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

</resources>
