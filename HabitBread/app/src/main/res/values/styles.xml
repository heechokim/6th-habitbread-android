<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#553615</item>
        <item name="colorPrimaryDark">#FF553615</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Habit List theme -->
    <style name="HabitListTheme" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <!-- Customize your theme here. -->
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <!-- Bottom Sheet Dialog theme -->
    <style name="bottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <!-- Customize your theme here. -->
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>
<!--        <item name="cornerSizeBottomRight">0dp</item>-->
<!--        <item name="cornerSizeBottomLeft">0dp</item>-->
    </style>

    <!-- Alarm WeekDay theme -->
    <style name="AlarmWeekDayTheme" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <!-- Customize your theme here. -->
        <item name="android:shape">oval</item>
    </style>

    <!-- Category Chip Text theme -->
    <style name="CategoryChipTextTheme" parent="TextAppearance.MaterialComponents.Chip">
        <!-- Customize your theme here. -->
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Category Chip theme -->
    <style name="CategoryChipTheme" parent="Widget.MaterialComponents.Chip.Choice">
        <!-- Customize your theme here. -->
        <item name="chipBackgroundColor">@color/selector_chip</item>
        <item name="rippleColor">@color/checkedTrue</item>
        <item name="chipSurfaceColor">@color/checkedTrue</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="chipCornerRadius">15dp</item>
    </style>

    <!-- Alarm Chip Text theme -->
    <style name="AlarmChipTextTheme" parent="TextAppearance.MaterialComponents.Chip">
        <!-- Customize your theme here. -->
        <item name="android:textSize">15sp</item>
    </style>

    <!-- Alarm Chip theme -->
    <style name="AlarmChipTheme" parent="Widget.MaterialComponents.Chip.Choice">
        <!-- Customize your theme here. -->
        <item name="chipBackgroundColor">@color/selector_chip</item>
        <item name="rippleColor">@color/checkedTrue</item>
        <item name="chipSurfaceColor">@color/checkedTrue</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="chipCornerRadius">200dp</item>
    </style>
</resources>
